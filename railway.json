{
  "builds": [
     {
      "src": "apps/server/package.json",
      "use": "@railway/nixpacks#beta"
    },
    {
      "src": "apps/client/package.json",
      "use": "@railway/nixpacks#beta"
    }
  ],
  "nixpacks": {
    "phases": {
      "install": {
        "cmds": ["npm install"]
      },
      "build": {
        "cmds": ["npm run build:client"]
      },
      "start": {
        "cmds": ["npm run start:client"]
      }
    }
  }
}