{
  "name": "chat-app",
  "version": "1.0.0",
  "private": true,
  "type": "commonjs",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently -n \"BACKEND,FRONTEND\" -c \"magenta,cyan\" \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "npm run start:dev -w server",
    "dev:client": "npm run dev -w client",
    "build": "npm run build --workspaces",
    "lint": "npm run lint --workspaces"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "concurrently": "^9.1.2"
  },
  "devDependencies": {
    "@types/node": "^20.0.0"
  },
  "db:gen": "npm run prisma generate -w server"
}
