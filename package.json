{
  "name": "chat-app",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "npm-run-all -p dev:client dev:server",
    "dev:client": "npm --workspace ./client run dev",
    "dev:server": "npm --workspace ./server run start:dev",
    "build:client": "npm --workspace client run build",
    "build:server": "npm --workspace server run build",
    "start": "npm-run-all -p start:client start:server",
    "start:client": "npm --workspace client run preview",
    "start:server": "npm --workspace server run start:prod",
    "prebuild:client": "rm -rf client/node_modules client/package-lock.json && npm --workspace client install",
    "build": "npm-run-all prebuild:client build:client build:server"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs"
}
